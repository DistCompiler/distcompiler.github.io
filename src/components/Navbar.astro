---
export interface Props {
	title: string;
}

import {borderColor, bgColor, borderStyle, buttonColors} from '../layouts/meta.js';
import logo from '../images/piggo.svg';

const { title } = Astro.props;

const links = [
    {
        name: "Home",
        href: "/",
    },
    {
        name: "Usage",
        href: "/usage",
    },
    {
        name: 'Modular PlusCal',
        href: '/mpcal',
    },
];
---

<header class={`flex flex-row flex-wrap gap-8 rounded mb-4 p-4 items-end text-black dark:text-white ${borderColor} ${bgColor} ${borderStyle}`}>
    <h1 class="text-4xl font-bold">
        <img class="inline-block h-12" alt="PGo logo" src={logo} />
        <a href="/">PGo</a>
    </h1>
    <nav class="ml-auto mr-8">
        <ul class="flex flex-row gap-2 text-lg font-medium">
            {
                links.map(link => (
                    <li class={`border ${buttonColors} py-1 px-2 rounded ${title === link.name ? "underline hover:no-underline whitespace-nowrap" : "hover:underline whitespace-nowrap"}`}>
                        <a href={link.href}>{link.name}</a>
                    </li>
                ))
            }
        </ul>
    </nav>
</header>

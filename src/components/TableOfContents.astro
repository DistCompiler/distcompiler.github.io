---
export interface Props {
    headings: { depth: number; slug: string; text: string }[];
}

const {headings} = Astro.props;
---

<ul class="outline outline-2 outline-slate-400 outline-offset-8 my-4 flex flex-row flex-wrap align-baseline gap-4 text-lg">
    {
        headings
            .map(heading => (
                <li>
                    <a class={`hover:underline${heading.depth === 1 ? '' : ' text-base text-slate-600'}`} href={`#${heading.slug}`}>
                        {heading.depth === 1 ? 'â†´ ' : `${'.'.repeat(heading.depth - 1)} `}{heading.text}
                    </a>
                </li>
            ))
    }
</ul>
